<Window x:Class="AudioRecorder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AudioRecorder"
        mc:Ignorable="d"
        Title="AudioRecorder" Height="110" Width="662">
    <DockPanel LastChildFill="True">
        <StatusBar DockPanel.Dock="Bottom">
            <TextBlock Text="Ожидание запуска. Частота дискретизации: 16кГц, 16 бит, моно" x:Name="StatusTextBlock"/>
        </StatusBar>
        
        <StackPanel Orientation="Horizontal">
            <Button Content="Начать запись" Width="120" Margin="20,10,0,10" Click="StartButtonClick" x:Name="StartButton" Height="21"/>
            <Button Content="Остановить запись" Width="120" Margin="10,10,20,10" IsEnabled="False" Click="StopButtonClick" x:Name="StopButton" Height="21"/>
            <ProgressBar Orientation="Horizontal" Minimum="0" Maximum="65536" x:Name="LevelProgressBar" Margin="10,0,0,0" Width="360"></ProgressBar>
        </StackPanel>

    </DockPanel>


</Window>
